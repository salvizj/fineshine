---
import BodyConditionRisks from "~/components/info/BodyConditionRisks.astro"
import CookieBanner from "../../components/cookies/CookieBanner.astro"
import Footer from "../../components/Footer/Footer.astro"
import Header from "../../components/Header/Header.astro"
import DetailingBenefits from "../../components/info/DetailingBenefits.astro"
import DetailingExterior from "../../components/info/DetailingExterior.astro"
import DetailingInterior from "../../components/info/DetailingInterior.astro"
import WhatIsDetailing from "../../components/info/WhatIsDetailing.astro"
import { languageOptions } from "../../locales"

import Layout from "../../layouts/Layout.astro"
import { useTranslate, type LanguageCode } from "~/utils/translationHooks"
import { getMetaData } from "~/utils/metaData"

export function getStaticPaths() {
	return Object.keys(languageOptions).map((lang) => ({ params: { lang } }))
}
const languageCode = Astro.params.lang as LanguageCode
const t = useTranslate(languageCode)

const meta = getMetaData(languageCode)
---

<Layout
	languageCode={languageCode}
	title={meta.title}
	description={meta.description}
	keywords={meta.keywords}
>
	<Header t={t} languageCode={languageCode} />

	<section class="max-w-screen-xl w-full mx-auto px-8 sm:px-4 py-8">
		<WhatIsDetailing t={t} />
		<DetailingExterior t={t} />
		<DetailingInterior t={t} />
		<DetailingBenefits t={t} />
		<BodyConditionRisks t={t} />
	</section>

	<Footer t={t} languageCode={languageCode} />
	<CookieBanner t={t} languageCode={languageCode} />
</Layout>
