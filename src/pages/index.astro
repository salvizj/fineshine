<script>
	import { defaultLanguageCode } from "../i18n/ui"
	import { getLanguageCodeFromUrl } from "../i18n/utils"
	import { getCookie } from "../utils/cookie"

	document.addEventListener("DOMContentLoaded", () => {
		const languageCode = getLanguageCodeFromUrl(
			new URL(window.location.href)
		)

		if (languageCode) return

		const savedLanguageCode = getCookie("lang")

		if (savedLanguageCode) {
			window.location.href = `/${savedLanguageCode}/`
		} else {
			window.location.href = `/${defaultLanguageCode}/`
		}
	})
</script>
