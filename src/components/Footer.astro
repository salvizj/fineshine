---
import SocialLinks from "./SocialLinks.astro"
import LocationInfo from "./LocationInfo.astro"
import ContactInfo from "./ContactInfo.astro"

interface Props {
	t: (key: string) => string
}
const { t } = Astro.props as Props

const phoneNumber = "+371 1234 1234"
---

<footer
	class="mt-12 w-full bg-gray-50 dark:bg-gray-900 text-gray-700 dark:text-gray-300"
	aria-label="Site footer"
>
	<hr class="mb-6 border-gray-300 dark:border-gray-700" />

	<div class="flex justify-center items-center">
		<div
			class="flex flex-col sm:flex-row justify-center gap-16 px-6 max-w-5xl mx-auto"
		>
			<SocialLinks />
			<LocationInfo t={t} />
			<ContactInfo phoneNumber={phoneNumber} t={t} />
		</div>
	</div>

	<div
		class="mt-8 text-center text-sm text-gray-500 dark:text-gray-400 select-none"
	>
		&copy; 2025 Fineshine. All rights reserved.
	</div>
</footer>
