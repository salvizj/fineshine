---
import { useTranslations, type LanguageCode } from "../i18n/utils"
import Contacts from "./Contacts.astro"
import Socials from "./Socials.astro"

const { languageCode } = Astro.props as { languageCode: LanguageCode }
const t = useTranslations(languageCode)
---

<footer class="mt-12 p-6 text-center" aria-label="Site footer">
	<hr class="mb-6 border-gray-300" />

	<div class="max-w-5xl mx-auto flex flex-wrap justify-center gap-16">
		<div class="flex flex-col items-center">
			<h4 class="mb-4 text-lg font-semibold">{t("social")}</h4>
			<Socials />
		</div>

		<div class="flex flex-col items-center">
			<h4 class="mb-4 text-lg font-semibold">{t("location")}</h4>
			<p>Raiņa bulvāris 11, Centra rajons, Rīga</p>
		</div>

		<div class="flex flex-col items-center">
			<h4 class="mb-4 text-lg font-semibold">{t("contacts")}</h4>
			<Contacts />
		</div>
	</div>

	<div class="mt-8 text-sm text-gray-500">
		&copy; 2025 Fineshine. All rights reserved.
	</div>
</footer>
