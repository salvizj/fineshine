---
import SocialLinks from "./SocialLinks.astro"
import LocationInfo from "./LocationInfo.astro"
import ContactInfo from "./ContactInfo.astro"
import OtherLinks from "./OtherLinks.astro"
import type { LanguageCode } from "../../i18n/utils"

interface Props {
	t: (key: string) => string
	languageCode: LanguageCode
}
const { t, languageCode } = Astro.props as Props

const phoneNumber = "+371 1234 1234"
---

<footer
	class="w-full bg-gray-100 dark:bg-gray-900 text-gray-700 dark:text-gray-300"
	aria-label="Site footer"
>
	<hr class="mb-6 border-gray-300 dark:border-gray-700" />

	<div class="flex justify-center items-center">
		<div
			class="flex flex-col sm:flex-row justify-center gap-16 max-w-5xl mx-auto"
		>
			<LocationInfo t={t} />
			<ContactInfo phoneNumber={phoneNumber} t={t} />
			<OtherLinks t={t} languageCode={languageCode} />
			<SocialLinks t={t} />
		</div>
	</div>

	<div
		class="mt-6 text-center text-sm text-gray-500 dark:text-gray-400 select-none space-y-2"
	>
		<div>&copy; 2025 Fineshine. All rights reserved.</div>
	</div>
</footer>
