---
interface Props {
	t: (key: string) => string
	flexDirection?: string
}

const { t, flexDirection = "row" } = Astro.props as Props
const links = ["#contacts", "#services", "#location", "#socials"]
---

<ul class={`flex flex-${flexDirection} gap-4 overflow-x-auto max-w-full`}>
	{
		links.map((link) => {
			const key = link.startsWith("#") ? link.slice(1) : link

			return (
				<li class="flex-shrink-0">
					<a
						href={link}
						class="group relative inline-block px-2 py-1 text-text-primary focus:outline-none focus:ring-2 focus:ring-hover-primary whitespace-nowrap"
					>
						<span class="relative z-10">{t("nav." + key)}</span>

						{/* Hover underline */}
						<span class="absolute left-0 bottom-0 h-0.5 w-full bg-hover-primary origin-left scale-x-0 transition-transform duration-300 group-hover:scale-x-100" />
					</a>
				</li>
			)
		})
	}
</ul>

<script>
	import HandleMissingAnchorRedirects from "../../scripts/HandleMissingAnchorRedirects"

	HandleMissingAnchorRedirects()
</script>
