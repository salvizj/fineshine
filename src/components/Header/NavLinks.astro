---
interface Props {
	t: (key: string) => string
	flexDirection?: string
}

const { t, flexDirection = "row" } = Astro.props as Props
---

<ul class={`flex flex-${flexDirection} gap-4`}>
	<li class="flex items-center">
		<a
			href="#contacts"
			class="group relative px-2 py-1 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-gray-500 dark:focus:ring-gray-300"
		>
			<span class="relative z-10">{t("nav.contacts")}</span>
			<span
				class="absolute left-0 bottom-0 h-0.5 w-0 bg-indigo-500 transition-all duration-300 group-hover:w-full"
			></span>
		</a>
	</li>
	<li class="flex items-center">
		<a
			href="#services"
			class="group relative px-2 py-1 rounded-md text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 dark:focus:ring-gray-300"
		>
			<span class="relative z-10">{t("nav.services")}</span>
			<span
				class="absolute left-0 bottom-0 h-0.5 w-0 bg-indigo-500 transition-all duration-300 group-hover:w-full"
			></span>
		</a>
	</li>
	<li class="flex items-center">
		<a
			href="#location"
			class="group relative px-2 py-1 rounded-md text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 dark:focus:ring-gray-300"
		>
			<span class="relative z-10">{t("nav.location")}</span>
			<span
				class="absolute left-0 bottom-0 h-0.5 w-0 bg-indigo-500 transition-all duration-300 group-hover:w-full"
			></span>
		</a>
	</li>
	<li class="flex items-center">
		<a
			href="#socials"
			class="group relative px-2 py-1 rounded-md text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 dark:focus:ring-gray-300"
		>
			<span class="relative z-10">{t("nav.socials")}</span>
			<span
				class="absolute left-0 bottom-0 h-0.5 w-0 bg-indigo-500 transition-all duration-300 group-hover:w-full"
			></span>
		</a>
	</li>
</ul>

<script>
	import HandleMissingAnchorRedirects from "../../scripts/HandleMissingAnchorRedirects"

	HandleMissingAnchorRedirects()
</script>
