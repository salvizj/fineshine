---
import {
	useServiceTranslations,
	useTranslations,
	type LanguageCode,
	type Service,
} from "../i18n/utils"

interface Props {
	t: (key: string) => string
	serviceList: Service[]
}

const { t, serviceList } = Astro.props as Props
---

<section class="mt-12 max-w-4xl mx-auto px-6">
	<h2
		class="text-4xl font-extrabold mb-8 text-center text-gray-900 dark:text-white"
	>
		{t("pricing_title")}
	</h2>
	<div class="space-y-8">
		{
			serviceList.map((service) => (
				<div
					class="p-6 rounded-lg shadow-md bg-white border border-gray-200 hover:shadow-lg transition-shadow duration-300
					   dark:bg-gray-900 dark:border-gray-700"
				>
					<h3 class="text-2xl font-semibold text-gray-800 dark:text-white mb-2">
						{service.name}
					</h3>
					<p class="text-gray-600 dark:text-gray-300 mb-4 leading-relaxed">
						{service.description}
					</p>
					<p class="text-xl font-bold text-indigo-600 dark:text-indigo-400">
						${Math.floor(Math.random() * 100 + 60)}
					</p>
				</div>
			))
		}
	</div>
</section>
