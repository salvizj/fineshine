---
import { type Service } from "../i18n/utils"

interface Props {
	t: (key: string) => string
	serviceList: Service[]
}

const { t, serviceList } = Astro.props as Props
---

<section class="mt-12 max-w-6xl mx-auto px-6" id="services">
	<h2
		class="text-2xl sm:text-3xl md:text-4xl font-extrabold mb-12 text-center text-text-primary"
	>
		{t("pricing_title")}
	</h2>

	<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
		{
			serviceList.map((service) => (
				<div class="group p-6 rounded-2xl border border-border-default bg-bg-default shadow-sm hover:shadow-md hover:-translate-y-1 transition duration-300">
					<h3 class="text-base sm:text-lg md:text-xl font-semibold text-text-primary mb-2">
						{service.name}
					</h3>

					<p class="text-sm sm:text-base text-text-tertiary mb-4 leading-relaxed line-clamp-4">
						{service.description}
					</p>

					<p class="text-base sm:text-lg md:text-xl font-bold text-hover-primary">
						${Math.floor(Math.random() * 100 + 60)}
					</p>
				</div>
			))
		}
	</div>
</section>
