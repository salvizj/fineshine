---
import { type Service } from "../i18n/utils"

interface Props {
	t: (key: string) => string
	serviceList: Service[]
}

const { t, serviceList } = Astro.props as Props
---

<section class="mt-12 max-w-6xl mx-auto px-6" id="services">
	<h2
		class="text-4xl font-extrabold mb-12 text-center text-gray-900 dark:text-white"
	>
		{t("pricing_title")}
	</h2>

	<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
		{
			serviceList.map((service) => (
				<div class="group p-6 rounded-2xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 shadow-sm hover:shadow-md hover:-translate-y-1 transition duration-300">
					<h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
						{service.name}
					</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400 mb-4 leading-relaxed line-clamp-4">
						{service.description}
					</p>
					<p class="text-lg font-bold text-indigo-600 dark:text-indigo-400">
						${Math.floor(Math.random() * 100 + 60)}
					</p>
				</div>
			))
		}
	</div>
</section>
