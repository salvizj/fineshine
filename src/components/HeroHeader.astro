---
interface Props {
	t: (key: string) => string
}

const { t } = Astro.props as Props
---

<section
	class="flex flex-col md:flex-row items-center max-w-7xl mx-auto px-4 sm:px-6 py-16"
>
	<div class="flex-1">
		<h1
			class="text-[clamp(2rem,6vw,4rem)] font-extrabold leading-tight text-left max-w-full sm:max-w-3xl px-2 sm:px-4 break-words hyphens-auto text-gray-900 dark:text-white animate-fadeInUp"
		>
			{t("hero.title")}
		</h1>

		<div class="mt-2 w-20 h-1 bg-indigo-600 rounded animate-fadeInUp"></div>

		<h3
			class="text-[clamp(1rem,4vw,2rem)] font-semibold leading-snug max-w-md sm:max-w-xl px-4 text-left text-gray-700 dark:text-gray-300 animate-fadeInUp"
		>
			{t("hero.subtitle")}
		</h3>

		<p
			class="mt-6 max-w-xl text-left text-gray-600 dark:text-gray-400 leading-relaxed px-4 animate-fadeInUp"
		>
			{t("hero.description")}
		</p>

		<button
			class="mt-8 px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-md transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 animate-fadeInUp"
		>
			{t("hero.cta")}
		</button>
	</div>

	<!-- Light Mode Image -->
	<div class="hidden dark:hidden md:block md:ml-12 animate-fadeInUp">
		<img
			src="/images/hero_car_dark.png"
			alt="Hero illustration"
			class="w-96 h-auto"
		/>
	</div>

	<!-- Dark Mode Image -->
	<div class="hidden dark:block md:ml-12 animate-fadeInUp">
		<img
			src="/images/hero_car_white.png"
			alt="Hero illustration"
			class="w-96 h-auto"
		/>
	</div>
</section>
