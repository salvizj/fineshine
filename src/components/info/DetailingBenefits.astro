---
interface Props {
	t: (key: string) => string
}
const { t } = Astro.props as Props
---

<section>
	<h2 class="text-2xl md:text-3xl font-semibold mb-8 text-text-primary">
		{t("auto_detailing.advantages.title")}
	</h2>

	<div class="grid gap-8 md:grid-cols-2">
		<div>
			<h3 class="text-xl font-semibold mb-2 text-text-primary">
				{
					t(
						"auto_detailing.advantages.benefits.improved_appearance.title"
					)
				}
			</h3>
			<p class="text-base text-text-secondary">
				{
					t(
						"auto_detailing.advantages.benefits.improved_appearance.description"
					)
				}
			</p>
		</div>

		<div>
			<h3 class="text-xl font-semibold mb-2 text-text-primary">
				{
					t(
						"auto_detailing.advantages.benefits.increased_resale_value.title"
					)
				}
			</h3>
			<p class="text-base text-text-secondary">
				{
					t(
						"auto_detailing.advantages.benefits.increased_resale_value.description"
					)
				}
			</p>
		</div>

		<div>
			<h3 class="text-xl font-semibold mb-2 text-text-primary">
				{
					t(
						"auto_detailing.advantages.benefits.health_and_hygiene.title"
					)
				}
			</h3>
			<p class="text-base text-text-secondary">
				{
					t(
						"auto_detailing.advantages.benefits.health_and_hygiene.description"
					)
				}
			</p>
		</div>

		<div>
			<h3 class="text-xl font-semibold mb-2 text-text-primary">
				{
					t(
						"auto_detailing.advantages.benefits.increased_driving_safety.title"
					)
				}
			</h3>
			<p class="text-base text-text-secondary">
				{
					t(
						"auto_detailing.advantages.benefits.increased_driving_safety.description"
					)
				}
			</p>
		</div>
	</div>
</section>
