---
interface Props {
	t: (key: string) => string
}
const { t } = Astro.props as Props
---

<section>
	<h2 class="text-2xl md:text-3xl font-semibold mb-6 text-text-primary">
		{
			t(
				"auto_detailing.body_condition.What_affects_the_condition_of_the_bodywork"
			)
		}
	</h2>

	<ul
		class="list-disc list-inside space-y-3 text-base md:text-lg text-text-secondary"
	>
		<li>{t("auto_detailing.body_condition.factors.0")}</li>
		<li>{t("auto_detailing.body_condition.factors.1")}</li>
		<li>{t("auto_detailing.body_condition.factors.2")}</li>
		<li>{t("auto_detailing.body_condition.factors.3")}</li>
		<li>{t("auto_detailing.body_condition.factors.4")}</li>
		<li>{t("auto_detailing.body_condition.factors.5")}</li>
		<li>{t("auto_detailing.body_condition.factors.6")}</li>
	</ul>
</section>
