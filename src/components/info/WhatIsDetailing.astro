---
interface Props {
	t: (key: string) => string
}
const { t } = Astro.props as Props
---

<section>
	<h2 class="text-2xl md:text-3xl font-semibold mb-4 text-text-primary">
		{t("auto_detailing.detailing.what_is_detailing_title")}
	</h2>
	<p class="mb-4 text-base md:text-lg text-text-primary">
		{t("auto_detailing.detailing.description_1")}
	</p>
	<p class="text-base md:text-lg text-text-secondary">
		{t("auto_detailing.detailing.description_2")}
	</p>
</section>
