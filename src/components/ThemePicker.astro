<button
	id="themeToggle"
	class="w-8 h-8 flex items-center justify-center"
	aria-label="Toggle theme"
>
	<!-- Sun Icon (Heroicons) -->
	<svg
		xmlns="http://www.w3.org/2000/svg"
		class="hidden dark:block"
		fill="none"
		viewBox="0 0 24 24"
		stroke="currentColor"
		width="24"
		height="24"
	>
		<path
			stroke-linecap="round"
			stroke-linejoin="round"
			stroke-width="2"
			d="M12 3v1m0 16v1m8.66-12.66l-.7.7M5.34 18.66l-.7.7M21 12h-1M4 12H3m15.36 5.36l-.7-.7M7.34 6.34l-.7-.7M12 7a5 5 0 100 10 5 5 0 000-10z"
		></path>
	</svg>

	<!-- Moon Icon (Heroicons) -->
	<svg
		xmlns="http://www.w3.org/2000/svg"
		class="block dark:hidden"
		fill="none"
		viewBox="0 0 24 24"
		stroke="currentColor"
		width="24"
		height="24"
	>
		<path
			stroke-linecap="round"
			stroke-linejoin="round"
			stroke-width="2"
			d="M21 12.79A9 9 0 1111.21 3a7 7 0 009.79 9.79z"></path>
	</svg>
</button>

<script>
	import { setCookie } from "../utils/cookie"

	document.addEventListener("DOMContentLoaded", () => {
		const themeToggleButton = document.getElementById("themeToggle")

		if (!themeToggleButton) {
			console.warn("Theme toggle button not found")
			return
		}

		const toggleTheme = () => {
			const isDarkModeEnabled =
				document.documentElement.classList.toggle("dark")
			const theme = isDarkModeEnabled ? "dark" : "light"
			setCookie("theme", theme)
		}

		themeToggleButton.addEventListener("click", toggleTheme)
	})
</script>
