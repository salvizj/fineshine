---
import { Image } from "astro:assets"
import shopOwnersImage from "../assets/shop_owner.jpg"
import type { LanguageCode } from "~/i18n/utils"

interface Props {
	t: (key: string) => string
	languageCode: LanguageCode
}

const { t, languageCode } = Astro.props as Props

const serviceHref = `/${languageCode}/services`
---

<section
	class="max-w-screen-xl w-full mx-auto px-8 sm:px-4 py-8 flex flex-col md:flex-row items-center gap-8 min-h-screen"
>
	<div class="flex-1 text-left">
		<h1 class="mb-4 relative inline-block">
			{t("hero.title")}
			<span
				class="absolute left-0 bottom-0 w-24 md:w-36 h-1 bg-accent rounded"
			></span>
		</h1>

		<p>{t("hero.description")}</p>
		<a
			href={serviceHref}
			class="inline-block mt-4 px-6 py-3 font-semibold hover:bg-hover-primary py-2 px-4 rounded transition-colors duration-200 cursor-pointer border border-border-default bg-bg-default text-text-primary"
		>
			{t("hero.cta")}
		</a>
	</div>

	<div class="flex-1 flex flex-col items-center">
		<Image
			src={shopOwnersImage}
			alt={t("hero.imageAlt")}
			class="w-full max-w-[24rem] rounded-2xl shadow-lg"
		/>
		<p
			class="mt-3 max-w-sm text-center text-text-tertiary text-sm leading-relaxed break-words"
		>
			{t("hero.imageCaption")}
		</p>
	</div>
</section>
