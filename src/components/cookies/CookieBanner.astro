---
interface Props {
	t: (key: string) => string
}

const { t } = Astro.props as Props
---

<div
	id="cookie-banner"
	class="hidden fixed bottom-0 w-screen bg-gray-200 text-gray-900 dark:bg-gray-800 dark:text-gray-100 text-sm px-4 py-4 z-50 shadow-lg border-t border-gray-300 dark:border-gray-700"
>
	<div
		class="max-w-screen-xl mx-auto flex flex-col sm:flex-row items-center justify-between px-4"
	>
		<span class="mb-2 sm:mb-0">
			{t("cookie.description")}
		</span>
		<div class="flex gap-2">
			<button
				id="cookie-banner-btn"
				class="bg-gray-300 text-gray-900 dark:bg-gray-700 dark:text-gray-100 font-semibold px-4 py-2 rounded hover:bg-gray-400 dark:hover:bg-gray-600 transition-colors cursor-pointer"
			>
				{t("cookie.btn_description")}
			</button>
			<button
				id="cookie-read-more-btn"
				class="bg-transparent underline text-blue-600 dark:text-blue-400 font-semibold px-4 py-2 rounded hover:text-blue-800 dark:hover:text-blue-600 transition-colors cursor-pointer"
			>
				{t("cookie.read_more")}
			</button>
		</div>
	</div>
</div>

<script>
	import HandleCookieBanner from "../../scripts/HandleCookieBanner"

	HandleCookieBanner()
</script>
