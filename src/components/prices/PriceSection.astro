---
import type { PriceSection } from "~/utils/types"

interface Props {
	priceSection: PriceSection
}

const { priceSection } = Astro.props
---

{
	priceSection && (
		<div class="mb-10">
			<h3 class="mb-4">{priceSection.title}</h3>
			<ul class="space-y-4">
				{priceSection.services.map((item, _) => (
					<li class="flex justify-between items-start sm:items-center gap-4 sm:gap-8">
						<div class="flex-1 min-w-0">
							<p class="text-text-primary">{item.title}</p>
							{item.description && (
								<p class="mt-1">{item.description}</p>
							)}
						</div>
						{item.price && (
							<p class="text-text-primary font-bold whitespace-nowrap ml-4 flex-shrink-0">
								{item.price}
							</p>
						)}
					</li>
				))}
			</ul>
		</div>
	)
}
