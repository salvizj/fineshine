---
import type { PriceSection } from "~/utils/types"

interface Props {
	priceSection: PriceSection
}

const { priceSection } = Astro.props
---

{
	priceSection && (
		<div class="mb-10">
			<h3 class="text-2xl font-semibold mb-4">{priceSection.title}</h3>
			<ul class="space-y-4">
				{priceSection.services.map((item, index) => (
					<li class="flex justify-between items-start sm:items-center gap-4 sm:gap-8">
						<div class="flex-1 min-w-0">
							<p class="font-medium text-text-primary">
								{item.title}
							</p>
							{item.description && (
								<p class="text-sm text-text-secondary mt-1">
									{item.description}
								</p>
							)}
						</div>
						{item.price && (
							<p class="font-semibold text-text-primary whitespace-nowrap ml-4 flex-shrink-0">
								{item.price}
							</p>
						)}
					</li>
				))}
			</ul>
		</div>
	)
}
