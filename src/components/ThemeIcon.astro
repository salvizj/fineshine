<button
	id="themeToggle"
	class="w-8 h-8 flex items-center justify-center"
	aria-label="Toggle theme"
>
	<svg
		id="sunIcon"
		width="24"
		height="24"
		viewBox="0 0 24 24"
		fill="currentColor"
		class="block dark:hidden"
		xmlns="http://www.w3.org/2000/svg"
	>
		<path
			d="M12 17.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 1.5a7 7 0 1 0 0-14 7 7 0 0 0 0 14zM12 0v2.5M12 21.5v2.5M0 12h2.5M21.5 12H24M3.5 3.5l1.8 1.8M18.7 18.7l1.8 1.8M3.5 20.5l1.8-1.8M18.7 5.3l1.8-1.8"
		></path>
	</svg>

	<svg
		id="moonIcon"
		width="24"
		height="24"
		viewBox="0 0 24 24"
		fill="currentColor"
		class="hidden dark:block"
		xmlns="http://www.w3.org/2000/svg"
	>
		<path
			d="M16.5 6A10.5 10.5 0 0 1 4.7 16.4 8.5 8.5 0 1 0 16.4 4.7l.1 1.3z"
		></path>
	</svg>
</button>

<script>
	import { setCookie } from "../utils/cookie"

	document.addEventListener("DOMContentLoaded", () => {
		const themeToggleButton = document.getElementById("themeToggle")

		if (!themeToggleButton) {
			console.warn("Theme toggle button not found")
			return
		}

		const toggleTheme = () => {
			const isDarkModeEnabled =
				document.documentElement.classList.toggle("dark")
			const theme = isDarkModeEnabled ? "dark" : "light"
			setCookie("theme", theme)
		}

		themeToggleButton.addEventListener("click", toggleTheme, {
			passive: true,
		})
	})
</script>
